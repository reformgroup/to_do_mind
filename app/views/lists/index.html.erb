<nav class="navbar subnavbar">
  <h2 class="text-truncate">Lists</h2>
  <%= icon 'fas', 'angle-down', class: 'ml-2' %>
  <div class="ml-auto">
    <%= link_to 'New List', new_list_path, class: 'btn btn-outline-primary', remote: true %>
  </div>
</nav>

<div class="content">
  <div class="list-group list-group-link list-group-link-dark sortable" data-url="<%= sort_lists_path %>">
    <% @lists.each do |list| %>
      <%= link_to [list, :tasks], class: 'list-group-item list-group-item-action list-group-link-item',  "data-object-id": list.id, remote: true do %>
        <div class="d-flex w-100 justify-content-between align-items-center">
          <span class="mb-1 text-truncate"><%= list.name %></span>
          <% if list.tasks.count > 0 %>
            <span class="badge badge-primary badge-pill"><%= list.tasks.count %></span>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>