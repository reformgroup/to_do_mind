<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<ul class="sortable" data-url="<%= sort_list_tasks_path %>">
  <% @tasks.each do |task| %>
    <li data-object-id="<%= task.id %>">
      <%= link_to task.name, list_task_path(@list, task), class: 'd-inline', remote: true %>
      <div class="d-inline"><%= task.description %></div>
      <div class="d-inline"><%= task.id %></div>
      <div class="d-inline"><%= task.position %></div>
    </li>
  <% end %>
</ul>

<br>

<%= link_to 'New Task', new_list_task_path, remote: true %>